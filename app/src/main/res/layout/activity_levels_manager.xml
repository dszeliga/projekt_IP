<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lastwerewolf.projekt_ip.LevelsManagerActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/NameTxt"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="108dp"
        android:layout_marginTop="56dp"
        android:text="NAZWA GRY"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/firstLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/firstLevel"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/czerwona"
        android:text="Poziom 1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/secondLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameTxt" />

    <Button
        android:id="@+id/secondLevel"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/pomaranczowa"
        android:text="Poziom 2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/thirdLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstLevel" />

    <Button
        android:id="@+id/thirdLevel"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginBottom="63dp"
        android:background="@drawable/fioletowa"
        android:text="Poziom 3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondLevel" />


</android.support.constraint.ConstraintLayout>
