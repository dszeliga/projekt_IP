<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_menu_1"
    tools:context="com.example.lastwerewolf.projekt_ip.CountingGameActivity">

    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:fontFamily="serif"
        android:text="Nauka cyfr"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="43sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/firstLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/level3"
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:background="@drawable/czerwona"
        android:fontFamily="serif"
        android:text="Poziom 3"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level2" />

    <Button
        android:id="@+id/level1"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:fontFamily="serif"
        android:text="Poziom 1"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/level2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTxt"
        app:layout_constraintVertical_bias="0.632" />

    <Button
        android:id="@+id/level2"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:background="@drawable/pomaranczowa"
        android:fontFamily="serif"
        android:text="Poziom 2"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/level3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level1" />

</android.support.constraint.ConstraintLayout>
