<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lastwerewolf.projekt_ip.MemoGameActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageButton
        android:id="@+id/firstImage"
        android:layout_width="150dp"
        android:layout_height="135dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="43dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/thirdImage"
        app:layout_constraintEnd_toStartOf="@+id/secondImage"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageButton
        android:id="@+id/secondImage"
        android:layout_width="150dp"
        android:layout_height="135dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="33dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/fourthImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/firstImage"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageButton
        android:id="@+id/thirdImage"
        android:layout_width="150dp"
        android:layout_height="135dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="43dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/fourthImage"
        app:layout_constraintEnd_toStartOf="@+id/fourthImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fourthImage"
        app:srcCompat="@android:drawable/star_big_on" />

    <ImageButton
        android:id="@+id/fourthImage"
        android:layout_width="150dp"
        android:layout_height="135dp"
        android:layout_marginBottom="108dp"
        android:layout_marginEnd="33dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thirdImage"
        app:layout_constraintTop_toBottomOf="@+id/infoTxt"
        app:srcCompat="@android:drawable/star_big_on" />

    <TextView
        android:id="@+id/infoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="199dp"
        android:layout_marginTop="28dp"
        android:text="ZnajdÅº pary"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/fourthImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
