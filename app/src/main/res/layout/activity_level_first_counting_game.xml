<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sk"
    tools:context=".LevelFirstCountingGameActivity">

    <ImageView
        android:id="@+id/iv_zbiory"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toTopOf="@+id/b_answer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_answer1"
        android:layout_width="368dp"
        android:layout_height="72dp"
        android:background="@android:color/transparent"
        android:fontFamily="casual"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/b_answer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_zbiory" />

    <Button
        android:id="@+id/b_answer2"
        android:layout_width="368dp"
        android:layout_height="66dp"
        app:layout_constraintBottom_toTopOf="@+id/b_answer3"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        android:fontFamily="casual"
        android:textSize="40sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_answer1" />

    <Button
        android:id="@+id/b_answer3"
        android:layout_width="368dp"
        android:layout_height="58dp"
        app:layout_constraintBottom_toTopOf="@+id/b_answer4"
        android:background="@android:color/transparent"
        android:fontFamily="casual"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_answer2" />

    <Button
        android:id="@+id/b_answer4"
        android:layout_width="368dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/transparent"
        android:fontFamily="casual"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_answer3" />

</android.support.constraint.ConstraintLayout>