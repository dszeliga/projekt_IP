<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_game1"
    tools:context="com.example.lastwerewolf.projekt_ip.MemoGameActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/infoTxt"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="36dp"
        android:text="ZnajdÅº pary"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ResetButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:onClick="onClickReset"
        android:text="Reset"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintBottom_toTopOf="@+id/ResetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoTxt">

        <ImageButton
            android:id="@+id/firstImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="0"
            app:srcCompat="@drawable/b_game2" />

        <ImageButton
            android:id="@+id/secondImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="0"
            app:srcCompat="@drawable/b_game3" />

        <ImageButton
            android:id="@+id/thirdImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="0"
            app:srcCompat="@drawable/b_game3" />

        <ImageButton
            android:id="@+id/fourthImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_row="0"
            app:srcCompat="@drawable/b_game2" />

        <ImageButton
            android:id="@+id/fifthImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="1"
            app:srcCompat="@drawable/b_game3" />

        <ImageButton
            android:id="@+id/sixthImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="2"
            app:srcCompat="@drawable/b_game2" />

        <ImageButton
            android:id="@+id/seventhImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="3"
            app:srcCompat="@drawable/b_game3" />

        <ImageButton
            android:id="@+id/eigthImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="1"
            app:srcCompat="@drawable/b_game2" />

        <ImageButton
            android:id="@+id/ninthImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="1"
            app:srcCompat="@drawable/b_game2" />

        <ImageButton
            android:id="@+id/tenthImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_row="1"
            app:srcCompat="@drawable/i1" />

        <ImageButton
            android:id="@+id/eleventhImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="2"
            app:srcCompat="@drawable/b_game3" />

        <ImageButton
            android:id="@+id/twelvethImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="2"
            app:srcCompat="@drawable/b_game2" />

        <ImageButton
            android:id="@+id/thirteenthImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_row="2"
            app:srcCompat="@drawable/b_game2" />

        <ImageButton
            android:id="@+id/fourteenthImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="3"
            app:srcCompat="@drawable/b_game3" />

        <ImageButton
            android:id="@+id/fifteenthImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="3"
            app:srcCompat="@drawable/b_game3" />

        <ImageButton
            android:id="@+id/sixteenthImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_row="3"
            app:srcCompat="@drawable/b_game3" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>
