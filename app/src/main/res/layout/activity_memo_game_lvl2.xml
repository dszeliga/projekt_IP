<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_game1"
    tools:context="com.example.lastwerewolf.projekt_ip.MemoGameActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/infoTxt"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="61dp"
        android:text="ZnajdÅº pary"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout" />

    <Button
        android:id="@+id/ResetButton"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="48dp"
        android:onClick="onClickReset"
        android:text="Reset"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="104dp"
        app:layout_constraintBottom_toTopOf="@+id/resetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/firstImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/b_game3" />

        <ImageButton
            android:id="@+id/secondImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="0"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/b_game2" />

        <ImageButton
            android:id="@+id/thirdImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="0"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/b_game3" />

        <ImageButton
            android:id="@+id/fourthImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/b_game2" />

        <ImageButton
            android:id="@+id/sixthImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/b_game2" />

        <ImageButton
            android:id="@+id/seventhImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="2"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/b_game2" />

        <ImageButton
            android:id="@+id/eightImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="2"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/b_game3" />

        <ImageButton
            android:id="@+id/ninthImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="2"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/b_game2" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>